@model IEnumerable<MainProject.Models.Cart>

@{
}




<style>
    .line1 {
        clear: both;
        height: 2px;
        width: 95%;
        background-color: #E3E9E9;
    }
</style>

<div class="card mt-2">
    <table class="bg-dark">
        <tr>
            <td style="padding-left:10px"><img src="~/media/cart2.png" width="18 " /> <label class="text-white"> Shopping Cart</label></td>
            <td class="text-right" style="padding:10px"><a asp-action="User_home" class="btn btn-outline-info text-info">Continue Shopping</a></td>
        </tr>
    </table>
    @foreach (var item in Model)
    {
        <div class="card-body row mt-3">
            <div class="col-md-3">
                <img src="/media/@item.Products.Image" width="200px" />
            </div>
            <div class="col-md-3">
                <h4>@item.Products.Title</h4>
                <label>@item.Products.Description</label>
            </div>
            <div class="col-md-2 font-weight-bold">
                $<label>@item.Rate</label>x @item.Count
            </div>
            <div class="col-md-2">
                <a asp-action="SubCount" asp-route-cid="@item.Id" class="btn btn-danger">-</a>
                <a asp-action="AddCount" asp-route-cid="@item.Id" class="btn btn-primary">+</a>
            </div>
            <div class="col-md-2">
                <a asp-action="DeleteCart" asp-route-cid="@item.Id" class="btn btn-danger text-white" onclick="return confirm('Are you sure you want to delete this record?')">DELETE</a>
            </div>
            <div class="line1 mt-5 ml-4"></div>
        </div>

    }
    @if (Model.Count() > 0)
    {
        <div class="border bg-light offset-7 col-md-4 row mb-3">
            <div class="col-md-6" style="padding-top:5px;">
                <label class="text-info">Total(USD)</label>
            </div>
            <div class="col-md-6 text-right" style="padding-top:5px;">
                $@ViewBag.total
            </div>
        </div>
        <div class="line1" style="width:100%"></div>
        <div class="bg-light mt-2 mb-2">
            <div class="offset-7 col-md-4">
                <a asp-action="Summary" class="btn btn-success form-control text-white">Summary</a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-3 mb-3">
            <h3>No items in cart.</h3>
        </div>
    }
</div>
