@model IEnumerable<MainProject.Models.Product>

@{
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card border-info col-md-3 mt-4 mr-2">
            <div>
                <img src="/media/@item.Image" width="250px" class="mt-3" />
            </div>
            <div>
                <h3><b>@item.Title</b></h3>
            </div>
            <div class=" text-info">
                by <label class="font-weight-bold">@item.Author</label>
            </div>
            <div>
                List Price : <label><strike>@item.ListPrice</strike></label>
            </div>
            <div class="text-danger">
                As low as : <label class="font-weight-bold">@item.Price</label>
            </div>
            <div class="form-group">
                <a class="form-control btn btn-success" asp-route-id="@item.Id" asp-action="ProductDetails">Details</a>
            </div>
        </div>
    }
</div>
