@model MainProject.Models.Cart

<style>
    .line1 {
        clear: both;
        height: 2px;
        margin-bottom: 3%;
        width: 100%;
        background-color: #E3E9E9;
    }
</style>

@{
}


<div class="card mt-4">
    <form method="post">
        <div class="row">
            <div class="col-md-6" style="padding-left:30px;">
                <h1 class="text-info mt-2">@Model.Products.Title</h1>
                <div class="text-warning">
                    <h5>by @Model.Products.Author</h5>
                </div>
            </div>
            <div class="col-md-6 mt-4 text-right" style="padding-right:30px;">
                <label class="btn bg-success text-white">@Model.Products.Cover_Types.Ctname</label>
                <label class="btn bg-warning text-white">@Model.Products.Categories.Name</label>
            </div>
        </div>
        <div class="line1 mt-4"></div>
        <div class="row">
            <div class="col-md-7" style="padding-left:40px">
                <div class="text-secondary">
                    ISBN : <label>@Model.Products.ISBN</label>
                </div>
                <div class="text-secondary">
                    List Price : $<label>@Model.Products.ListPrice</label>
                </div>
                <div>
                    <table class="table bg-secondary">
                        <tr>
                            <th>Quantity</th>
                            <th>1-49</th>
                            <th>50-99</th>
                            <th>100+</th>
                        </tr>
                        <tr class="text-danger">
                            <td>Price</td>
                            <td>@Model.Products.Price</td>
                            <td>@Model.Products.Price50</td>
                            <td>@Model.Products.Price100</td>
                        </tr>
                    </table>
                </div>
                <div>
                    @Model.Products.Description
                </div>
                <div class="form-group row mt-4">
                    <div class="col-md-4">
                        <h4 class="text-info text-right">Count:</h4>
                    </div>
                    <div class="col-md-8">
                        <input type="number" name="count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <img src="/media/@Model.Products.Image" width="400px" />
            </div>
        </div>
        <div class="line1 mt-4"></div>
        <div class="row mb-4">
            <div class="col-md-6" style="padding-left:30px">
                <a class="btn btn-success text-white form-control" asp-action="User_home">Back to List</a>
            </div>
            <div class="col-md-6" style="padding-right:30px">
                <input type="submit" class="btn btn-dark text-white form-control" value="Add to Cart"/>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6" style="padding-left:30px">

            </div>
            <div class="col-md-6" style="padding-right:30px">
                @ViewBag.msg
            </div>
            <input asp-for="ProductId"  hidden />
        </div>
    </form>
</div>
