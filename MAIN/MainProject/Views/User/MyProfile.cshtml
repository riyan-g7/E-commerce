@model MainProject.Models.User

    <style>
        .line1 {
            clear: both;
            margin-bottom: 3%;
            width: 100%;
            height: 2px;
            background-color: #E3E9E9
        }
    </style>



<div class="card mt-4" style="padding:30px">
    <form method="post">
        <h2 class="text-left text-info">My Profile</h2>
        <div class="mt-3 line1"></div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="Name"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="Email"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="Phone"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="Phone" class="form-control"  />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="Street"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="City"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label asp-for="State"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label >Postal Code</label>
            </div>
            <div class="col-md-4">
                <input asp-for="P_Code" class="form-control"/>
                <span asp-validation-for="P_Code" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">

            </div>
            <div class="col-md-2">
                <input type="submit" value="Edit" onclick="return confirm('Confirm Edits?')" class="form-control btn btn-success" />

            </div>
            <div class="col-md-2">
                <a asp-action="User_home" class="form-control btn btn-dark">Back to home</a>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-md-2 mt-1">

            </div>
            <div class="col-md-4">
                @ViewBag.msg
            </div>
        </div>
    </form>
</div>
