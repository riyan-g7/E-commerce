@model MainProject.Models.User

<style>
    .line1 {
        clear: both;
        margin-bottom: 3%;
        width: 100%;
        height: 2px;
        background-color: #E3E9E9
    }
</style>



<div class="card mt-4" style="padding:30px">
    <form method="post">
        <h2 class="text-left text-info">My Profile</h2>
        <div class="mt-3 line1"></div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label>Password</label>
            </div>
            <div class="col-md-4">
                <input type="text" name="oldpass" class="form-control" />
                <label class="text-danger"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label >New Pasword</label>
            </div>
            <div class="col-md-4">
                <input type="text" name="newpass" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label>Confirm New Password</label>
            </div>
            <div class="col-md-4">
                <input type="text" name="confirm" class="form-control" />
                <label class="text-danger">@ViewBag.c</label>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">

            </div>
            <div class="col-md-2">
                <input type="submit" value="Change" class="form-control btn btn-success" />

            </div>
            <div class="col-md-2">
                <a asp-action="User_home" class="form-control btn btn-dark">Back to home</a>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-md-2 mt-1">

            </div>
            <div class="col-md-4">
                @ViewBag.msg
            </div>
        </div>
    </form>
</div>