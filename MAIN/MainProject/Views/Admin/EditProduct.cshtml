@model MainProject.Models.ViewModel.ProductViewModel

@{
}

<style>
    .line1 {
        clear: both;
        margin-bottom: 3%;
        width: 100%;
        height: 2px;
        background-color: #E3E9E9
    }
</style>

@{
}
<div class="card mt-4" style="padding:30px">
    <form method="post" enctype="multipart/form-data">
        <h2 class="text-left text-info">Edit Product</h2>
        <div class="mt-3 line1"></div>
        <div class="row">
            <div class="col-md-7">
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Title"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Title" class="form-control" placeholder="Title Here" />
                        <span asp-validation-for="product.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.ISBN"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.ISBN" class="form-control" placeholder="ISBN " />
                        <span asp-validation-for="product.ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Author"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Author" class="form-control" placeholder="Author Name" />
                        <span asp-validation-for="product.Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Description"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Description" class="form-control" placeholder="Description" />
                        <span asp-validation-for="product.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.ListPrice"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.ListPrice" class="form-control" placeholder="Listing Price" />
                        <span asp-validation-for="product.ListPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Price"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Price" class="form-control" placeholder="Price" />
                        <span asp-validation-for="product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Price50"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Price50" class="form-control" placeholder="Price for 50Nos" />
                        <span asp-validation-for="product.Price50" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.Price100"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="product.Price100" class="form-control" placeholder="Price for 100Nos" />
                        <span asp-validation-for="product.Price100" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.CategoryId"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="product.CategoryId" asp-items="Model.categories" class="custom-select">
                            <option>--Select Category--</option>
                        </select>
                        <span asp-validation-for="product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label asp-for="product.CoverId"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="product.CoverId" asp-items="Model.covers" class="custom-select">
                            <option>--Select Cover type--</option>
                        </select>
                        <span asp-validation-for="product.CoverId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">
                        <label>Image</label>
                    </div>
                    <div class="col-md-8">
                        <input type="file" asp-for="product.Img" />
                        <span asp-validation-for="product.Img" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 text-right mt-1">

                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Update" class="form-control btn btn-success" />

                    </div>
                    <div class="col-md-4">
                        <a asp-action="Product_list" class="form-control btn btn-dark">Back to list</a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <img src="/media/@Model.product.Image" width="400px"/>
            </div>
        </div>
    </form>
</div>
