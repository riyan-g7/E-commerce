@model MainProject.Models.Cover_type

<style>
    .line1 {
        clear: both;
        margin-bottom: 3%;
        width: 100%;
        height: 2px;
        background-color: #E3E9E9
    }
</style>

@{
}
<div class="card mt-4" style="padding:30px">
    <form method="post">
        <h2 class="text-left text-info">Edit Cover</h2>
        <div class="mt-3 line1"></div>
        <div class="form-group row">
            <div class="offset-2 col-md-2 mt-1">
                <label>Cover Type:</label>
            </div>
            <div class="col-md-4">
                <input asp-for="Ctname" class="form-control" placeholder="Cover Type Here" />
                <span asp-validation-for="Ctname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-md-1 mt-1">

            </div>
            <div class="col-md-2">
                <input type="submit" value="Update" class="form-control btn btn-success" />
            </div>
            <div class="col-md-2">
                <a asp-action="Cover_list" class="form-control btn btn-dark">Back to list</a>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-md-1 mt-1">

            </div>
            <div class="col-md-4">
                @ViewBag.msg
            </div>
        </div>
    </form>
</div>
